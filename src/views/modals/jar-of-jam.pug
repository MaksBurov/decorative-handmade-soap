            h5.modal__title Баночка с вареньем
            button.modal__btn-close
        .modal__body
            .modal__images.swiper
                .modal__galery.swiper-wrapper
                    .modal__item.swiper-slide
                        .modal__item-block
                            picture    
                                source(srcset="./public/assets/images/jar-of-jam-0.webp" type="image/webp")
