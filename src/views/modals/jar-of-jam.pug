                    .modal__item.swiper-slide
                        .modal__item-block
                            picture    
                                source(srcset="./public/assets/images/jar-of-jam-1.webp" type="image/webp")
                                source(srcset="./public/assets/images/jar-of-jam-1.jpg" type="image/jpeg")
