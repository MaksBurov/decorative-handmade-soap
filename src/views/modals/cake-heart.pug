
div.modal.modal--cake-heart
    .modal__wrapper
        .modal__header 
            h5.modal__title Пирожное сердце
            button.modal__btn-close
        .modal__body
            .modal__images.swiper
                .modal__galery.swiper-wrapper
                    .modal__item.swiper-slide
                        .modal__item-block
                            picture 
                                source(srcset="./public/assets/images/cake-heart-1.webp" type="image/webp")
                                source(srcset="./public/assets/images/cake-heart-1.jpg" type="image/jpeg")
                                img.modal__item-img(src="./public/assets/images/cake-heart-1.png" loading="lazy")
                    .modal__item.swiper-slide
                        .modal__item-block
                            picture 
                                source(srcset="./public/assets/images/cake-heart-2.webp" type="image/webp")
                                source(srcset="./public/assets/images/cake-heart-2.jpg" type="image/jpeg")
                            img.modal__item-img(src="./public/assets/images/cake-heart-2.png" loading="lazy")
                    .modal__item.swiper-slide
                        .modal__item-block
                            picture 
                                source(srcset="./public/assets/images/cake-heart-3.webp" type="image/webp")
                                source(srcset="./public/assets/images/cake-heart-3.jpg" type="image/jpeg")
                                img.modal__item-img(src="./public/assets/images/cake-heart-3.png" loading="lazy")
